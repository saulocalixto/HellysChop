<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Cardapio.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CadastroItem.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/About.css")" rel="stylesheet" type="text/css" />
    
</head>

<body>
    
    <div class="cabecalho">
        <div class="tituloBar">Hellys Chopp</div>
        <div class="linha"></div>

        <div class="menu">
            <a href="javascript:void(0);" id="menuLink">Menu</a>
            <div class="wrapLink">
                <span class="link">@Html.ActionLink("Home", "Index", "Home")</span>
                <span>||</span>
                <span class="link">@Html.ActionLink("Hellys Menu", "Index", "Item")</span>
                <span>||</span>
                <span class="link">@Html.ActionLink("Cadastrar Produto", "IndexCadastro", "Item")</span>
                <span>||</span>
                <span class="link">@Html.ActionLink("Hellys About", "Index", "About")</span>
            </div>
        </div>
    </div>
    @RenderSection("voltar", false)
    @RenderBody()
    
    <div class="rodape">
        <hr class="linha" />
        <div class="copyRodape">hellysright (c) 2017</div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Item.js")" type="text/javascript"></script>
</body>
</html>
